{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <h2>{{ post.title }}</h2>
    <p>{{ post.text }}</p>
    <p>Date: {{ post.date|date('y-m-d H') }}</p>
    <p>Testing custom filter: {{ 20|price }}</p>
    <p>Here is your language: {{ locale }}</p>
    <p>Session started: {{ app.session.isStarted() }}</p>
{% endblock %}